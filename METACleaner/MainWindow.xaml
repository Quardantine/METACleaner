<Window x:Class="METACleaner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:METACleaner"
        mc:Ignorable="d"
        Title="MainWindow"
        Background="Transparent"
        Height="300" Width="450"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True">
    <Grid>
        <Border x:Name="MainBorder" Background="#333333" CornerRadius="8" MouseDown="MainBorder_MouseDown">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="25"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <StackPanel HorizontalAlignment="Right" Orientation="Horizontal" Margin="0 ,0 ,0 ,0">
                        <Button x:Name="Button_Minimize" Style="{StaticResource Button_Top_Side}"  Content="─" Click="Button_Minimize_Click"/>
                        <Button x:Name="Button_Close" Style="{StaticResource Button_Top_Side}" Content="✕" Click="Button_Close_Click"/>
                    </StackPanel>
                </Grid>
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Column="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="40"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0">
                            <Border Margin="10,5,10,5" Background="#222222" CornerRadius="8">
                                <TextBlock FontSize="20"
                                           Text="METACleaner"
                                           Foreground="Aqua"
                                           VerticalAlignment="Center"
                                           HorizontalAlignment="Center"
                                           FontStretch="Condensed" FontWeight="Bold"/>
                            </Border>
                        </Grid>
                        <Grid Grid.Row="1">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="70"/>
                            </Grid.RowDefinitions>
                            <Grid Grid.Row="0">
                                <Border Margin="10,5,10,5" Background="#222222" CornerRadius="8"
                                        AllowDrop="True"
                                        PreviewDragOver="Border_PreviewDragOver"
                                         PreviewDrop="Border_PreviewDrop">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#E0E0E0"/>
                                                    <Setter Property="BorderBrush" Value="#888888"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                    <Border CornerRadius="8"
                                            BorderBrush="Gray"
                                            BorderThickness="1"
                                            Background="Transparent"
                                            Margin="7">
                                        <TextBlock Text="Drag and Drop"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"
                                                   Foreground="Gray"/>
                                    </Border>
                                </Border>
                            </Grid>
                            <Grid Grid.Row="1">
                                <Border Margin="10,5,10,5" Background="#222222" CornerRadius="8">
                                    <Button Grid.Row="2" 
                                        x:Name="ClearMetadataButton"
                                        Content="🧹 Clear METADATA" 
                                        Background="#FF6B6B"
                                        Foreground="#222222"
                                        FontWeight="Bold"
                                        Padding="20,10"
                                        Margin="10"
                                        Height="40"
                                        Click="ClearMetadataButton_Click"
                                        IsEnabled="False"/>
                                </Border>
                            </Grid>
                        </Grid>
                    </Grid>
                    <Grid Grid.Column="1">
                        <Border Background="#222222" CornerRadius="8" Margin="10,5,10,5">
                            <ScrollViewer Grid.Row="1" Margin="10" VerticalScrollBarVisibility="Hidden">
                                <ItemsControl x:Name="FilesItemsControl">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="5" 
                                                Margin="0,5" Background="#FAFAFA" Padding="15">
                                                <ContentPresenter Content="{Binding}"/>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>
                        </Border>
                    </Grid>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Window>
